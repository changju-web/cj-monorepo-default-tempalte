{
  "name": "cj-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "^20.19.0 || >=22.13.0",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "pnpm --filter @cj/web dev",
    "dev:web": "pnpm --filter @cj/web dev",
    "build": "pnpm --filter @cj/web build",
    "build:web": "pnpm --filter @cj/web build",
    "build:staging": "pnpm --filter @cj/web build:staging",
    "preview": "pnpm --filter @cj/web preview",
    "preview:web": "pnpm --filter @cj/web preview",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm lint:eslint && pnpm lint:prettier && pnpm lint:stylelint",
    "lint:eslint": "eslint --cache --max-warnings 0 \"{apps,packages}/**/*.{vue,js,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write \"{apps,packages}/**/*.{js,ts,json,tsx,css,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{html,vue,css,scss}\" --cache-location node_modules/.cache/stylelint/",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:cache": "rimraf .eslintcache && rimraf pnpm-lock.yaml && pnpm store prune",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cj/eslint-config": "workspace:*",
    "@cj/stylelint-config": "workspace:*",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.25.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "are-we-there-yet": "*",
      "sourcemap-codec": "*",
      "lodash.isequal": "*",
      "domexception": "*",
      "w3c-hr-time": "*",
      "inflight": "*",
      "npmlog": "*",
      "rimraf": "*",
      "stable": "*",
      "gauge": "*",
      "abab": "*",
      "glob": "*"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "core-js",
      "es5-ext",
      "esbuild",
      "typeit",
      "vue-demi"
    ],
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide"
    ]
  }
}
